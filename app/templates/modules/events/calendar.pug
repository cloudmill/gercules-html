.calendar-data-events
  input(type="hidden" name="" data-year='2020' data-day='17' data-month='9' data-count='5' )
  input(type="hidden" name="" data-year='2020' data-day='26' data-month='9' data-count='2' )
  input(type="hidden" name="" data-year='2020' data-day='15' data-month='10' data-count='1' )
  input(type="hidden" name="" data-year='2020' data-day='23' data-month='11' data-count='4' )
  input(type="hidden" name="" data-year='2020' data-day='1' data-month='12' data-count='3' )
  input(type="hidden" name="" data-year='2021' data-day='30' data-month='1' data-count='4' )
.events-calendar
  table.events-calendar-head
    - const week = ["пн", "вт", "ср", "чт", "пт", "сб", "вс"]
    tr
      each day in week
        td=day
  .events-calendar-slider
    table
      - const events = { "17": 5, "26": 2 }
      - for (let week = 0; week < 5; week++)
        tr
          - for (let day = 0; day < 7; day++)
            -
              let curDay = (week * 7 + day);
              let isCurMonth = curDay < 31;
              curDay = (curDay % 31) + 1;
            if events[curDay] && isCurMonth
              td.calendar-event.js-modal(href="#events") #{curDay}
                span События:
                span #{events[curDay]}
            else
              td(class = isCurMonth ? "" : "calendar-disabled") #{curDay}
