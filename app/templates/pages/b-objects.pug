extends ../layouts/clean



block variables

    - pageTitle = "Объекты";



block content

    .b-content

        .b-content__wrapper

            aside.b-content__side-bar

                nav.side-nav
                    ul.side-nav__list
                        -
                            var items = [
                                "О компании",
                                "Новости",
                                "Упаковка продукции",
                                { text: "Объекты", active: true },
                                "Видеогалерея",
                                "Сотрудники",
                                "Вакансии",
                                "Социальная  ответственность",
                                "Контакты"
                            ];
                        each item in items
                            li.side-nav__item(class = item.active ? "side-nav__item--active" : "")
                                a(href="").side-nav__item-link #{item.text ? item.text : item}

            main.b-objects.b-content__main.b-content__main--pd-t--60.b-content__main--overflow--hidden



                .b-content__main-item.b-content__main-item--pd--hor

                    .b-breadcrumbs
                        -
                            var items = [
                                "Главная",
                                "О компании",
                                pageTitle
                            ];
                        each item in items    
                            .b-breadcrumbs__item
                                a(href="").b-breadcrumbs__link #{item}



                .b-content__main-item.b-content__main-item--pd--hor.b-content__main-item--mg-t--35
                
                    h1.title.title--page #{pageTitle}



