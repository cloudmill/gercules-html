extends ../layouts/clean

block variables
    - var pageTitle = "Тендерная площадка для транспортных компаний";

block content
    .provider-area
        .b-content
            .b-content__wrapper
                aside.b-content__side-bar
                    nav.side-nav
                        ul.side-nav__list
                            li.side-nav__item
                                a(href="").side-nav__item-link Поставщикам
                            li.side-nav__item
                                a(href="").side-nav__item-link Тендеры для поставщиков
                            li.side-nav__item.side-nav__item--active
                                a(href="").side-nav__item-link Тендерная площадка для транспортных компаний
                main.provider-area__main.b-content__main.b-content__main--pd-t--60
                    .b-content__main-item.b-content__main-item--pd--hor
                        .b-breadcrumbs
                            .b-breadcrumbs__item
                                a(href="").b-breadcrumbs__link Главная
                            .b-breadcrumbs__item
                                a(href="").b-breadcrumbs__link Поставщикам
                            .b-breadcrumbs__item
                                a(href="").b-breadcrumbs__link #{pageTitle}
                    .b-content__main-item.b-content__main-item--pd--hor.b-content__main-item--mg-t--35
                        h1.title.title--page
                            |Тендерная площадка
                            br
                            |для транспортных компаний
                    .b-content__main-item.b-content__main-item--pd--hor.b-content__main-item--mg-t--60
                        .provider-area__row
                            .provider-area__col
                                h2.title.title--default
                                    |Войти на тендерную
                                    br
                                    |площадку
                            .provider-area__col
                                form(action="").b-form.provider-area__form
                                    label.b-form__item
                                        .b-form__item-title.b-form__item-title--mb--17
                                            |Логин*
                                        .b-form__item-input
                                            input(type="text", name="login", placeholder="ksh@cloudmill.ru", required).text-input
                                    label.b-form__item.b-form__item--mt--30
                                        .b-form__item-title.b-form__item-title--mb--17
                                            |Пароль*
                                        .b-form__item-input
                                            input(type="password", name="password", placeholder="***************", required).text-input
                                    label.b-form__item.b-form__item--mt--30
                                        .b-form__item-input
                                            label.checkbox-input
                                                input.checkbox-input__input(type="checkbox", name="agreement", required)
                                                p.checkbox-input__text
                                                    |«Я выражаю согласие на обработку ПДн в соответствии с 
                                                    a(href="").checkbox-input__link
                                                        |Политикой конфиденциальности
                                                    |»
                                    .provider-area__form-row
                                        .provider-area__form-col
                                            +btn-p-gram("Войти")
                                        .provider-area__form-col
                                            a(href="javascript:void(0)").provider-area__link
                                                |Восстановить пароль
                                    .provider-area__form-bottom
                                        +btn-p-gram("Зарегистрироваться", "btn-p-gram--theme--white", "javascript:void(0)")

