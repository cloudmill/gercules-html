                                    +icon("map-pin-with-g", "png")
                                .for-partners__map-panel-text.for-partners__map-panel-text--ml--14
                                    |Главный офис
                                
                        .for-partners__map-map.for-partners__map-map--max-width.for-partners__map-map--mt
                            
                            .for-partners__map-image.for-partners__map-image--min-width
                                
                                img.for-partners__map-img(src="../images/map-1.png")

                                .for-partners__map-pin
