extends ../layouts/default.pug

block variables
  - const pageTitle = 'Распродажа продукции Gerkules в магазинах Технониколь!'

block content
  .content.shares.content-other-padding
    .page-title Распродажа продукции Gerkules
      br
      | в магазинах Технониколь!
    p Проектная деятельность дает ответ на существующий вызов стремительно меняющегося мира, вовлекая
      br
      | в систему обучения реальные практики, реальных экспертов и настоящие проблемные ситуации,
      br
      | с которыми студенческие команды разбираются в ходе проектирования и формируя пул метапредметных
      br
      | компетенций у студентов.
    .shares-time
      +icon('calendar', 'svg')
      p Срок действия
      .shares-time_row
        p
          span 22.10.
          | 2018  —  
          span 31.11.
          | 2018
        p В акции участвуют 
          span 15 позиций
      +link('#', 'Архив акций')
    .shares-products
      - for (let i = 0; i < 8; i++)
        .shares-product
          .shares-product_photo
            -
              let j = i % 4
              let photo = j == 0 || j == 3 ? 1 : 2
            img(src=`../images/product-${photo}.png`, alt="")
          .shares-product_content
            .shares-product_info
              h2 GE-29 Грунтовка укрепляющая глубокого проникновения, 5, 10 кг
              +hashTags([["новинки", "#"], ["акция", "#"], ["хит продаж", "#"]])
            a(href="#") В магазин
              +icon("arrow", "svg")
    include fs/showmore