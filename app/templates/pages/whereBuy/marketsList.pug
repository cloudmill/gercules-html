mixin markets-item(name,id, open = "", link = "technonikol.ru")
  div(class = open ? "open" : "" data-id=id).markets-item
    .market-front
      .market-name=name
      .market-link=link
    .market-dropdown

.buy-markets-list
  //- .markets-scroll
  //-   span
  .markets-wrapper
    +markets-item("Леруа Мерлен",'0')
    +markets-item("ТЦ Глобус",'1')
    +markets-item("Технониколь",'2')
    +markets-item("ТЦ Глобус",'3')
