                .b-content__main-item.b-content__main-item--mg-t--60
                    .select-tag
                        .select-tag__row
                            .select-tag__left
                                span.select-tag__label
                                    |Популярные темы:
                            .select-tag__mid
                                .select-tag__wrapper
                                    mixin list
                                        -
                                            var tags = [
                                                '#все',
                                                '#семинар',
                                                '#конференция',
                                                '#новинки',
                                                '#академиягеркулес',
                                                '#социальная ответсвенность',
                                                '#скидки',
                                                '#новые',
                                                '#события',
                                                '#мероприятия',
                                                '#семинар',
                                                '#новинки',
                                                '#академиягеркулес',
                                            ];
                                        each tag, index in tags
                                            li.select-tag__item
                                                if (index === 0 || index === 6)
                                                    span.select-tag__tag.select-tag__tag--active
                                                        |#{tag}
                                                else
                                                    span.select-tag__tag
                                                        |#{tag}
                                        li.select-tag__item
                                            button.select-tag__reset
                                                span.select-tag__reset-mark
                                                span.select-tag__reset-text
                                                    |Очистить все
                                    ul.select-tag__list.select-tag__list--preview.select-tag__list--active
                                        +list
                                    ul.select-tag__list
                                        +list
                            .select-tag__right
                                button.select-tag__open
                                    span.select-tag__open-mark
                                    span.select-tag__open-text.select-tag__open-text--active
                                        |#{'Еще '}
                                        span.select-tag__open-count
                                            |6
                                        |#{' тегов'}
                                    span.select-tag__open-text
                                        |Свернуть
                    .teg-mob
                        .teg-mob__row
