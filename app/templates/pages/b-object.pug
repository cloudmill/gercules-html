extends ../layouts/clean



block variables

    - pageTitle = "ТК Мега Дыбенко";



block content

    .b-content

        .b-content__wrapper

            aside.b-content__side-bar

                nav.side-nav
                    ul.side-nav__list
                        -
                            var items = [
                                "О компании",
                                "Новости",
                                "Упаковка продукции",
                                { text: "Объекты", active: true },
                                "Видеогалерея",
                                "Сотрудники",
                                "Вакансии",
                                "Социальная  ответственность",
                                "Контакты"
                            ];
                        each item in items
                            li.side-nav__item(class = item.active ? "side-nav__item--active" : "")
                                a(href="").side-nav__item-link #{item.text ? item.text : item}

            main.b-object.b-content__main.b-content__main--pd-t--60.b-content__main--overflow--hidden



                .b-content__main-item.b-content__main-item--pd--hor

                    .b-breadcrumbs
                        -
                            var items = [
                                "Главная",
                                "О компании",
                                "Объекты",
                                pageTitle
                            ];
                        each item in items    
                            .b-breadcrumbs__item
                                a(href="").b-breadcrumbs__link #{item}



                .b-content__main-item.b-content__main-item--pd--hor.b-content__main-item--mg-t--35
                
                    .b-object__row

                        .b-object__slider

                            .b-object-slider

                                .b-object-slider__photo

                                    .swiper-container
                                        .swiper-wrapper
                                            each item in [1, 2, 3, 4]
                                                .swiper-slide.b-object-slider__photo-slide
                                                    .b-object-slider__photo-image
                                                        if (item === 2)
                                                            img.b-object-slider__photo-img(src="https://cloudmill.github.io/gercules-static/b-object/thumb-2.jpg", alt="")
                                                        else
                                                            img.b-object-slider__photo-img(src="https://cloudmill.github.io/gercules-static/b-object/photo-1.jpg", alt="")

                                .b-object-slider__row

                                    .b-object-slider__thumb

                                        .swiper-container
                                            .swiper-wrapper
                                                each item in [2, 2, 3, 4]
                                                    .swiper-slide.b-object-slider__thumb-slide
                                                        .b-object-slider__thumb-image
                                                            img.b-object-slider__thumb-img(src=`https://cloudmill.github.io/gercules-static/b-object/thumb-${item}.jpg`, alt="")

                                    .b-object-slider__btn

                                        .b-object-slider__btn-left
                                        
                                        .b-object-slider__btn-right

                        .b-object__info



                        


