                    include ./fs/object
                .objects-list_item
                    -var imgObject= 'object-2.png'
                    -var nameObject= 'ТК Гранд Каньон'
                    include ./fs/object
                .objects-list_item
                    -var imgObject= 'object-3.jpg'
                    -var nameObject= 'ТК Берега Невы'
                    include ./fs/object
                .objects-list_item
                    include ./fs/object
