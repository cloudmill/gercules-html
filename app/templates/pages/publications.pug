extends ../layouts/clean

block variables
    - pageTitle = "Публикации";

block content
    .publications
        .b-content
            .b-content__wrapper
                aside.b-content__side-bar
                    nav.side-nav
                        ul.side-nav__list
                            li.side-nav__item
                                a(href="").side-nav__item-link
                                    |Покупателям
                            li.side-nav__item.side-nav__item--active
                                a(href="").side-nav__item-link
                                    |Публикации
                            li.side-nav__item
                                a(href="").side-nav__item-link
                                    |Консультации
                            li.side-nav__item
                                a(href="").side-nav__item-link
                                    |Где купить?
                main.b-content__main.b-content__main--pd-t--60.b-content__main--overflow--hidden
                    .b-content__main-item.b-content__main-item--pd--hor
                        .b-breadcrumbs
                            .b-breadcrumbs__item
                                a(href="").b-breadcrumbs__link
                                    |Главная
                            .b-breadcrumbs__item
                                a(href="").b-breadcrumbs__link
                                    |Покупателям
                            .b-breadcrumbs__item
                                a(href="").b-breadcrumbs__link
                                    |Публикации
                    .b-content__main-item.b-content__main-item--pd--hor.b-content__main-item--mg-t--35
                        h1.title.title--page
                            |#{pageTitle}
                    .b-content__main-item.b-content__main-item--mg-t--60
                        .select-tag
                            .select-tag__row
                                .select-tag__left
                                    span.select-tag__label
                                        |Популярные темы:
                                .select-tag__mid
                                    .select-tag__wrapper
                                        mixin list
                                            -
                                                var tags = [
                                                    '#все',
                                                    '#семинар',
                                                    '#конференция',
                                                    '#новинки',
                                                    '#академиягеркулес',
                                                    '#социальная ответсвенность',
                                                    '#скидки',
                                                    '#новые',
                                                    '#события',
                                                    '#мероприятия',
                                                    '#семинар',
                                                    '#новинки',
                                                    '#академиягеркулес',
                                                ];
                                            each tag, index in tags
                                                li.select-tag__item
                                                    if (index === 0 || index === 6)
                                                        span.select-tag__tag.select-tag__tag--active
                                                            |#{tag}
                                                    else
                                                        span.select-tag__tag
                                                            |#{tag}
                                            li.select-tag__item
                                                button.select-tag__reset
                                                    span.select-tag__reset-mark
                                                    span.select-tag__reset-text
                                                        |Очистить все
                                        ul.select-tag__list.select-tag__list--preview.select-tag__list--active
                                            +list
                                        ul.select-tag__list
                                            +list
                                .select-tag__right
                                    button.select-tag__open
                                        span.select-tag__open-mark
                                        span.select-tag__open-text.select-tag__open-text--active
                                            |#{'Еще '}
                                            span.select-tag__open-count
                                                |6
                                            |#{' тегов'}
                                        span.select-tag__open-text
                                            |Свернуть
                    .b-content__main-item
                        .publication
                            .publication__list.publication__list--mg-t--m1.publication__list--mg-l--m1
                                each i in [1, 2]
                                    each j in [1, 2, 3, 4]                            
                                        .publication__item
                                            a(href="").publication__content
                                                .publication__image
                                                    img.publication__img(src=`./images/publication-${j}.jpg`)
                                                p.publication__date
                                                    |22 октября 2019
                                                h6.title.title--default.publication__title
                                                    |Новая формула GE-29: глубже, равномернее, крепче!
                                                p.publication__text
                                                    |С 20 марта 2018 мы начали выпуск нового продукта: «Грунтовка укрепляющая глубокого проникновения GE-29». Мы улучшили формулу и обновили упаковку!
                                            ul.hash-list.hash-list--spaces--2.hash-panel__container.publication__hash-list
                                                li.hash.hash-list__item
                                                    a(href="").hash-list__link #жизнькомпании
                                                li.hash.hash-list__item
                                                    a(href="").hash-list__link #новости
                    .b-content__main-item.b-content__main-item--mg-t--60
                        a(href="").showmore
                            .showmore__wrapper
                                .showmore__text Показать еще
                                .showmore__count 52
                    .b-content__main-item.b-content__main-item--mg-t--120
                        include ../modules/publications-subscription
